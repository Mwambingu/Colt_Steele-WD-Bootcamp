<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="stylesheet" href="/static/app.css" />
        <title>Show Farm</title>
    </head>
    <body>
        <h1>Show Farm</h1>
        <div class="container">
            <table>
                <thead>
                    <th class="table-header first-column">Property</th>
                    <th class="table-header">Value</th>
                </thead>
                <tbody>
                    <tr>
                        <td class="first-column">Name</td>
                        <td><%=farm.farmName%></td>
                    </tr>
                    <tr>
                        <td class="first-column">Location</td>
                        <td><%=farm.location%></td>
                    </tr>
                    <% if (farm.products.length > 0) {%>
                    <tr>
                        <td class="first-column">Products</td>
                        <td><%=products%></td>
                    </tr>
                    <%}%>
                </tbody>
            </table>
            <div class="wrapper new-nav">
                <form
                    action="/?_method=DELETE&id=<%=farm.id%>"
                    method="POST"
                    id="delete-form"
                >
                    <a href="/">Back</a>
                    <a id="btn-danger">Delete</a>
                </form>
            </div>
        </div>
    </body>
    <script>
        const deleteForm = document.querySelector("#delete-form");
        const button = deleteForm.querySelector("#btn-danger");
        button.addEventListener("click", (evt) => {
            evt.preventDefault();
            button.parentElement.submit();
        });
    </script>
</html>

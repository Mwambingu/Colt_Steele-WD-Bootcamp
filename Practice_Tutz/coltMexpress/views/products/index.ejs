<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300;0,500;0,700;0,800;1,300;1,500;1,700&display=swap"
            rel="stylesheet"
        />
        <link rel="stylesheet" href="/static/app.css" />
        <title>Products</title>
    </head>
    <body>
        <h1 class="page-title"><%= category %> products</h1>
        <% for (let product of products) {%>
        <ul class="product-container">
            <li class="product">
                <a href="/products/<%= product.id %>"><%= product.name %></a>
                <form
                    id="delete-form"
                    action="/products/<%=product.id%>?_method=DELETE"
                    method="POST"
                >
                    <a id="delete-btn" class="btn danger">Delete</a>
                </form>
            </li>
        </ul>
        <% } %>
        <div class="create-btn-container">
            <a class="btn primary" href="/products/new">Create Product</a>
            <% if (category !== "all") { %>
            <a style="margin-left: 10px" class="btn primary" href="/products"
                >All Products</a
            >
            <% } %>
        </div>

        <script>
            const deleteBtn = document.querySelector("#delete-btn");

            deleteBtn.addEventListener("click", (evt) => {
                const deleteForm = document.querySelector("#delete-form");
                deleteForm.submit();
            });
        </script>
    </body>
</html>
